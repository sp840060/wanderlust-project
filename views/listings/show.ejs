<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <div class="row mb-4">
    <div class="col-12 text-center">
      <h3><strong><%= listing.title %></strong></h3>
    </div>
  </div>

  <div class="row">
    <div class="card border-0 col-md-6 offset-md-3 show-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing image">

      <div class="card-body">
        <p class="card-text">
          <p><i><strong>Owner By: </strong> <%=listing.owner.username %></i></p>
          <p><strong>Description: </strong><%= listing.description %></p>
          <p><strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
          <p><strong>Location:</strong> <%= listing.location %> </p>
          <p><strong>Country:</strong> <%= listing.country %></p>
        </p>
      </div>
    </div>
  </div><br>

  <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="btns">
    <div class="col-md-6 offset-md-1 d-flex justify-content-center gap-4">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4 edit-btn ">Edit</a>
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-dark px-4">Delete</button>
      </form>
    </div>
  </div>
  <% } %>
  <br>

  <% if(currUser) { %>
  <div class="col-8 offset-3 mt-3">
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>

    <div class="mb-3 mt-3"></div>
    <label for="rating" class="form-label">Rating</label>
    <fieldset class="starability-slot">
      <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
    </div>
      <div class="col-md-8 offset-md-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Comment cannot be empty.</div>
        <br>
        <button type="submit" class="btn btn-outline-dark">Submit</button>
      </div>

    </form>
  </div>
  <% } %>

  <!-- All Reviews Section (Always centered) -->
  <div class="row mt-2">
    <div class="col-md-8 offset-md-3">
      <hr>
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for(review of listing.reviews){ %>
          <div class="card col-5 ms-3 mb-2">
            <div class="card-body">
              <p class="starability-result card-text" data-rating=  "<%= review.rating %>">
              </p>
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="card-text"><%= review.comment %></p>
              
            </div>
            <br>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
